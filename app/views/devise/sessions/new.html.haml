.row
  .col-md-6.col-md-offset-3
    .panel.panel-default
      .panel-heading
        %h3.panel-title
          SIGN IN
      .panel-body
        = semantic_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          = f.input :email, label: 'Your E-mail'
          = f.input :password, label: 'Your Password'
          - if devise_mapping.rememberable?
            %p.text-right.small
              = f.label 'Remember Me!'
              = f.check_box :remember_me
          = f.submit 'Sign In', class: 'btn btn-success pull-right'
          = f.submit 'Sign In as guest user', class: 'btn btn-success pull-left'
          %br
          %br
        - unless omniauth_configured.empty?
          .row
            .col-md-4
              %hr
            .col-md-4
              %h4.text-center
                or use
            .col-md-4
              %hr
          .row
            .col-md-12
              #openidlinks
                = render 'devise/shared/openid'
              %p.text-right
                = render 'devise/shared/links'
