.row
  .col-md-6.col-md-offset-3
    .panel.panel-default
      .panel-heading
        %h3.panel-title
          E-mail Confirmation
          .text-muted
            To enable your account, please confirm your e-mail!
      .panel-body

        = semantic_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f|
          = devise_error_messages!

          = f.input :email, input_html: { autofocus: true }
          = f.submit 'Send confirmation instructions', class: 'btn btn-success'

        .row
          .col-md-12
            .text-right
              = render 'devise/shared/links'
